    </link>

    <joint name="back_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="back_yaw_link" />
        <child link="back_roll_link" />
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>



    <link name="back_pitch_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
            <material name="green_dark"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0352"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="4.95616e-05" ixy="0" ixz="0" iyy="4.95616e-05" iyz="0" izz="4.95616e-05"/>
        </inertial>
    </link>

    <joint name="back_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="back_roll_link" />
        <child link="back_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>


    <!--Front Right Rod-->
    <link name="front_right_rod">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
                <geometry>
                    <cylinder length="0.220" radius="0.01"/>
                </geometry>
            <material name="white"/>
        </visual>

        <collision>
        <geometry>
            <cylinder length="0.220" radius="0.01"/>
        </geometry>
        </collision>

        <inertial>
            <mass value="0.250"/>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
            <inertia ixx="0.0010145833333333333" ixy="0" ixz="0" iyy="0.0010145833333333333" iyz="0" izz="1.25e-05"/>
        </inertial>

    </link>

    <joint name="front_right_rod_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.090 -0.090 0.0775" />
        <parent link="chassis" />
        <child link="front_right_rod" />
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>


    <!--Front Left Rod-->
    <link name="front_left_rod">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
                <geometry>
                    <cylinder length="0.220" radius="0.01"/>
                </geometry>
            <material name="white"/>
        </visual>

        <collision>
        <geometry>
            <cylinder length="0.220" radius="0.01"/>
        </geometry>
        </collision>

        <inertial>
            <mass value="0.250"/>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
            <inertia ixx="0.0010145833333333333" ixy="0" ixz="0" iyy="0.0010145833333333333" iyz="0" izz="1.25e-05"/>
        </inertial>

    </link>

    <joint name="front_left_rod_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.090 0.090 0.0775" />
        <parent link="chassis" />
        <child link="front_left_rod" />
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!--Back Right Rod-->
    <link name="back_right_rod">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
                <geometry>
                    <cylinder length="0.220" radius="0.01"/>
                </geometry>
            <material name="white"/>
        </visual>

        <collision>
        <geometry>
            <cylinder length="0.220" radius="0.01"/>
        </geometry>
        </collision>

        <inertial>
            <mass value="0.250"/>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
            <inertia ixx="0.0010145833333333333" ixy="0" ixz="0" iyy="0.0010145833333333333" iyz="0" izz="1.25e-05"/>
        </inertial>

    </link>

    <joint name="back_right_rod_joint" type="continuous">
        <origin rpy="0 0 0" xyz="-0.090 -0.090 0.0775" />
        <parent link="chassis" />
        <child link="back_right_rod" />
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>


    <!--Back Left Rod-->
    <link name="back_left_rod">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.110"/>
                <geometry>
                    <cylinder length="0.220" radius="0.01"/>
                </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.220" radius="0.01"/>
            </geometry>
        </collision>

        <inertial>
                <mass value="0.250"/>
                <origin rpy="0 0 0" xyz="0 0 0.110"/>
                <inertia ixx="0.0010145833333333333" ixy="0" ixz="0" iyy="0.0010145833333333333" iyz="0" izz="1.25e-05"/>
        </inertial>

    </link>

    <joint name="back_left_rod_joint" type="continuous">
        <origin rpy="0 0 0" xyz="-0.090 0.090 0.0775" />
        <parent link="chassis" />
        <child link="back_left_rod" />
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!--Cup holder-->
    <link name="cup_holder">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <cylinder length="0.090" radius="0.160"/>
                </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.090" radius="0.160"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1.0"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.007075" ixy="0" ixz="0" iyy="0.007075" iyz="0" izz="0.0128"/>
        </inertial>

    </link>

    <joint name="cup_holder_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0.3425" />
        <parent link="chassis" />
        <child link="cup_holder" />
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Laser Position Control-->
    <link name="laser_scan_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://barista_robot_description/meshes/hokuyo_urg_04lx.dae" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0204"/>
            <geometry>
                <box size="0.1 0.1 0.08"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.01"/>
            <origin rpy="0 0 0" xyz="0 0 0.0204"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
    </link>


    <joint name="laser_scan_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.090 0 0.0775"/>
        <parent link="chassis"/>
        <child link="laser_scan_link"/>
    </joint>

    <!--Source: https://github.com/Hlwy/gazebo_sensor_collection/blob/master/urdf/lidars/hokuyo_urg04lx.urdf.xacro-->
    <gazebo reference="laser_scan_link">
        <sensor name="sensor_hokuyo_urg04lx" type="gpu_ray">
            <pose>0 0 0 0 0 0</pose>
            <ray>
                <scan>
                    <horizontal>
                        <samples>640</samples>
                        <resolution>0.00628318531</resolution>
                        <min_angle>-2.0943</min_angle>
                        <max_angle>2.0943</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.02</min>
                    <max>4.0</max>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
				</noise>
            </ray>
            <always_on>true</always_on>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <plugin name="sensor_hokuyo_urg04lx_controller" filename="libgazebo_ros_gpu_laser.so">
                <ros>
                    <namespace>/barista_robot</namespace>
                    <remapping>~/out:=laser_scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
            </plugin>
        </sensor>
   </gazebo>

</robot>